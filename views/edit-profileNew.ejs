<body>
    <div class="container portfolio">
        <div class="row">
            <div class="col-md-12">
                <div class="heading">
                    <img src="https://image.ibb.co/cbCMvA/logo.png" />
                </div>
            </div>
        </div>
        <div class="bio-info">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12 profile-imgDiv">
                            <div class="bio-image">
                                <!-- <img src="<%=prf.profImg%>" alt="Admin"
                                    class="rounded-circle"> -->
                                <img src="https://www.seekpng.com/png/small/966-9665493_my-profile-icon-blank-profile-image-circle.png"
                                    alt="Admin" class="rounded-circle">

                            </div>
                        </div>
                        <div class="card mt-3 profile-div edit-div">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <h6 class="mb-0">
                                        <a href="profile.html" style="text-decoration:none;">Profile</a>
                                    </h6>
                                </li>
                                <li class="list-group-item">
                                    <h6 class="mb-0"><a href="#" style="text-decoration:none;">Cart</a></h6>
                                </li>
                                <li class="list-group-item">
                                    <h6 class="mb-0"><a href="wishlist.html" style="text-decoration:none;">My
                                            Wishlist</a>
                                    </h6>
                                </li>
                                <li class="list-group-item">
                                    <h6 class="mb-0"><a href="subscription.html" style="text-decoration:none;">My
                                            Subscriptions</a></h6>
                                </li>
                                <li class="list-group-item">
                                    <h6 class="mb-0"><a href="#" style="text-decoration:none;">Help</a></h6>
                                </li>
                                <li class="list-group-item">
                                    <h6 class="mb-0"><a href="#" style="text-decoration:none;">Contact us</a></h6>
                                </li>
                                <li class="list-group-item">
                                    <h6 class="mb-0"><a href="#" style="text-decoration:none;">Logout</a></h6>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 details">

                    <form method="post" action="/editProfile" >

                        <!-- USER NAME -->
                        <div class="form-floating mb-3">
                            <input required type="text" id="full-name" name="fullName" class="form-control"
                                placeholder="Full name" value="<%=prf.username%>">
                            <label for="full-name">FULL NAME</label>
                        </div>

                        <!-- USER EMAIL -->
                        <div class="form-floating mb-3">
                            <input required type="email" class="form-control" id="user-email" name="userEmail"
                                placeholder="name@example.com" value="<%=prf.usermail%>">
                            <label for="user-email">Email address</label>
                        </div>

                        <!-- PRODUCT DESCRIPTION -->
                        <!-- <div class="mb-3">
                            <label for="product-description" class="form-label">PRODUCT DESCRIPTION</label>
                            <textarea required id="product-description" name="productDescription" class="form-control"></textarea>
                        </div> -->

                        <div class="row">

                            <!-- USER AGE -->
                            <div class="col-4 mb-3">
                                <div class="form-floating">
                                    <input required type="number" min="1" max="100" id="user-age" name="userAge"
                                        class="form-control" placeholder="Age" value="<%=prf.age%>">
                                    <label for="user-age">AGE</label>
                                </div>
                            </div>

                            <!-- USER NUMBER -->
                            <div class="col-4 mb-3">
                                <div class="form-floating">
                                    <input required type="tel" id="user-phone-number" name="userPhoneNumber"
                                        class="form-control" placeholder="Phone Number" pattern="[6-9]{1}[0-9]{9}" value="<%=prf.phone%>">
                                    <label for="user-phone-number">PHONE NUMBER</label>
                                </div>
                            </div>

                            <!-- GENDER -->

                            <div class="col-4 mb-3">
                                <select class="form-select gender-select" aria-label="Gender" name="userGender" required>
                                    <option selected value="">SELECT GENDER</option>
                                    <option value="MALE">MALE</option>
                                    <option value="FEMALE">FEMALE</option>
                                    <option value="OTHERS">OTHERS</option>
                                </select>
                            </div>
                        </div>

                            
                            


                        <!-- USER ADDRESS -->
                        <div class="form-floating mb-3">
                            <input required type="text" id="user-street1" name="userStreet1" class="form-control"
                                placeholder="Home Address" value="<%=prf.address.street1%>">
                            <label for="user-street1">FLAT / BUILDING NO. / SOCIETY NAME</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input required type="text" id="user-street2" name="userStreet2" class="form-control"
                                placeholder="Street 2" value="<%=prf.address.street2%>">
                            <label for="user-street2">STREET</label>
                        </div>
                        <div class="row">
                            <div class="col-3 mb-3">
                                <div class="form-floating">
                                    <input required type="text" id="user-city" name="userCity" class="form-control"
                                        placeholder="City" value="<%=prf.address.city%>">
                                    <label for="user-city">CITY</label>
                                </div>
                            </div>
                            <div class="col-3 mb-3">
                                <div class="form-floating">
                                    <input required type="text" id="user-state" name="userState" class="form-control"
                                        placeholder="State" value="<%=prf.address.state%>">
                                    <label for="user-state">STATE</label>
                                </div>
                            </div>
                            <div class="col-3 mb-3">
                                <div class="form-floating">
                                    <input required type="text" id="user-country" name="userCountry"
                                        class="form-control" placeholder="Country" value="<%=prf.address.country%>">
                                    <label for="user-country">COUNTRY</label>
                                </div>
                            </div>

                            <div class="col-3 mb-3">
                                <div class="form-floating">
                                    <input required type="tel" id="user-pincode" name="userPincode" class="form-control"
                                        placeholder="Pincode" pattern="[1-9]{1}[0-9]{5}" value="<%=prf.address.zip%>">
                                    <label for="user-pincode">PINCODE</label>
                                </div>
                            </div>
                        </div>


                        <!-- <div class="form-floating mb-3">
                                <input type="text" class="form-control" list="datalistOptions" name="productOriginCountry1"
                                    id="exampleDataList" placeholder="Type to search...">
                                <datalist id="datalistOptions">
                                    <option value="San Francisco">
                                    <option value="New York">
                                    <option value="Seattle">
                                    <option value="Los Angeles">
                                    <option value="Chicago">
                                </datalist>
                                <label for="exampleDataList" class="form-label">Country of origin</label>
                            </div> -->


                        <button type="submit" class="btn btn-primary">UPDATE PROFILE</button>


                    </form>
                </div>
            </div>
        </div>
    </div>
                </div>
            </div>
        </div>
    </div>
</body>

