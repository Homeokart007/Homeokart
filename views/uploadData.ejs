<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="/CSS/uploadData.css">
    <title>Upload Data</title>
</head>

<body>

    <h1>ADD A PRODUCT</h1>
    <form method="post" action="/uploadData">

        <!-- PRODUCT NAME -->
        <div class="form-floating mb-3">
            <input required type="text" id="product-name" name="productName" class="form-control"
                placeholder="Product name">
            <label for="product-name">Product Name</label>
        </div>

        <!-- PRODUCT DESCRIPTION -->
        <div class="mb-3">
            <label for="product-description" class="form-label">Product Description</label>
            <textarea required id="product-description" name="productDescription" class="form-control"></textarea>
        </div>

        <!-- PRODUCT PRICE -->
        <div class="form-floating mb-3">
            <input required type="number" min="0" step=".01" id="product-price" name="productPrice" class="form-control"
                placeholder="Product Price">
            <label for="product-price">Product Price(Rs)</label>
        </div>

        <!-- PRODUCT CATEGORY -->
        <div class="mb-3">
            <label class="form-label">PRODUCT CATEGORY</label>

            <div class="form-check">
                <input type="checkbox" id="category-1" name="productCategory" value="Covid" class="form-check-input">
                <label class="form-check-label" for="category-1">Covid</label>
            </div>
            <div class="form-check">
                <input type="checkbox" id="category-2" name="productCategory" value="Body Care Product"
                    class="form-check-input">
                <label class="form-check-label" for="category-2">Body Care Product</label>
            </div>
            <div class="form-check">
                <input type="checkbox" id="category-3" name="productCategory" value="Health Care Product"
                    class="form-check-input">
                <label class="form-check-label" for="category-3">Health Care Product</label>
            </div>
        </div>

        <!-- PRODUCT RATING -->
        <div class="form-floating mb-3">
            <input required type="number" min="0" max="5" step=".1" id="product-rating" name="productRating"
                class="form-control" placeholder="Product Rating">
            <label for="product-rating">Product Rating</label>
        </div>

        <!-- COUNTRY OF ORIGIN -->
        <select class="form-select mb-3" aria-label="Default select example" name="productOriginCountry" required>
            <option selected value="">Select Country of Origin</option>
            <option value="INDIA">INDIA</option>
            <option value="CHINA">CHINA</option>
            <option value="USA">USA</option>
        </select>

        <!-- <div class="form-floating mb-3">
            <input type="text" class="form-control" list="datalistOptions" name="productOriginCountry1"
                id="exampleDataList" placeholder="Type to search...">
            <datalist id="datalistOptions">
                <option value="San Francisco">
                <option value="New York">
                <option value="Seattle">
                <option value="Los Angeles">
                <option value="Chicago">
            </datalist>
            <label for="exampleDataList" class="form-label">Country of origin</label>
        </div> -->

        <!-- MANUFACTURER NAME -->
        <div class="form-floating mb-3">
            <input required type="text" id="manufacturer-name" name="manufacturerName" class="form-control"
                placeholder="Manufacturer name">
            <label for="manufacturer-name">Manufacturer Name</label>
        </div>

        <!-- MANUFACTURER ADDRESS -->
        <div class="form-floating mb-3">
            <input required type="text" id="manufacturer-address" name="manufacturerAddress" class="form-control"
                placeholder="Manufacturer Address">
            <label for="manufacturer-address">Manufacturer Address</label>
        </div>

        <!-- PRODUCT INGREDIENTS -->
        <div class="mb-3">
            <label for="product-ingredients" class="form-label">Product Ingredients</label>
            <textarea required id="product-ingredients" name="productIngredients" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</body>

</html>