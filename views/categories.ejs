                    <!-- Products -->

                    <section class="product-section">
                        <h2>All Products</h2>
                        <div class="row">
                            <% allProducts.forEach(function(prd) { %>
                            <div class="col-lg-3 col-md-6 col-sm-12 product-card">
                                <div class="product-card-inner">
                                    <a href="/product/<%= prd._id %>">
                                        <div class="product-card-img">
                                            <img src="/<%=prd.img.path[0]%>" alt="" />
                                        </div>

                                        <p class="product-brand">
                                            <%= prd.man_name %>
                                        </p>
                                        <h5>
                                            <%= prd.name.slice(0,20) %><%=
												prd.name.length >20 ? "..." : ""
												%>
                                        </h5>
                                        <p class="product-price">
                                            <span class="new-price">Rs. <%= prd.price %></span>
                                        </p>
                                    </a>
                                    <% let flag = 0; %>
                                    <% for(let i=0; i<productsInCart.length; i++){ %>
                                    <% if(prd._id == productsInCart[i]){ %>
                                    <% flag = 1; %>
                                    <% break; %>
                                    <% }} %>
                                    
