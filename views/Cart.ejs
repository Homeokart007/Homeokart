                <!-- <div class=""> -->
                <% cart.products.forEach(function(product){ %>
                <div class="crd">
                    <!-- cart images div -->
                    <div class="crd-img">
                        <img
                            src="\<%=product.img.path[0]%>"
                            class="img-fluid"
                            alt="cart img"
                        />
                    </div>
                    <!-- cart product details -->
                    <div class="crd-dtl">
                        <div class="crd-top">
                            <!-- product name  -->
                            <div class="prd-name">
                                <h1 class="mb-4 product_name">
                                    <%=product.name%>
                                </h1>
                                <p class="mb-2"><%=product.description%></p>
                            </div>
                            <!-- quantity inc dec -->
