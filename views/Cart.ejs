                                            ><button
                                                class="page-link"
                                                onclick="decreaseNumber('textbox','itemval')"
                                            >
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <input
                                            type="text"
                                            name=""
                                            class="page-link"
                                            value="<%=product.quantity%>"
                                            id="textbox"
                                        />
                                    </li>
                                    <li class="page-item">
